# =============================================================================
# IE221 Backend Environment Variables
# Copy this file to .env and fill in your values
# =============================================================================

# Django Settings
SECRET_KEY=your-secret-key-here-generate-a-new-one
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# Database (PostgreSQL / RDS)
DB_NAME=ie221_db
DB_USER=ie221_user
DB_PASSWORD=your-db-password
DB_HOST=localhost
DB_PORT=5432

# CORS (comma-separated list of allowed origins)
CORS_ALLOW_ALL=False
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://your-frontend-domain.com

# CSRF trusted origins (same as CORS_ALLOWED_ORIGINS usually)
CSRF_TRUSTED_ORIGINS=http://localhost:3000,https://your-frontend-domain.com

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=ie221
AWS_CLOUDFRONT_DOMAIN=your-cloudfront-domain.cloudfront.net

# Email (Gmail SMTP)
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Frontend URLs (for Djoser email links)
FRONTEND_DOMAIN=your-frontend-domain.com
FRONTEND_PROTOCOL=https

# VNPAY Payment Gateway (use production credentials in prod)
VNPAY_TMN_CODE=your-vnpay-tmncode
VNPAY_HASH_SECRET=your-vnpay-hash-secret
VNPAY_PAYMENT_URL=https://pay.vnpay.vn/vpcpay.html
VNPAY_RETURN_URL=https://your-frontend-domain.com/payment/result
VNPAY_API_URL=https://merchant.vnpay.vn/merchant_webapi/api/transaction

# Logging
LOG_LEVEL=INFO

# Gunicorn (optional overrides)
GUNICORN_WORKERS=4
GUNICORN_LOG_LEVEL=info

# Security (production)
SECURE_SSL_REDIRECT=True
